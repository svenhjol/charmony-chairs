{
  "schemaVersion": 1,
  "id": "charmony-chairs",
  "version": "${mod_version}",

  "name": "Charmony Chairs",
  "description": "Sit down on stair blocks when right-clicking with an empty hand.",

  "authors": [
    "svenhjol"
  ],
  "icon": "assets/charmony-chairs/textures/gui/sprites/icon.png",
  "license": "MIT",
  "environment": "*",
  "accessWidener": "charmony-chairs.accesswidener",
  "entrypoints": {
    "main": [
        "svenhjol.charmony.chairs.common.CommonInitializer"
    ],
    "client": [
        "svenhjol.charmony.chairs.client.ClientInitializer"
    ],
    "modmenu": [
        "svenhjol.charmony.chairs.integration.ModMenuPlugin"
    ]
  },

  "mixins": [],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "*",
    "java": ">=${java_version}",
    "fabric-api": "*",
    "charmony": ">=${charmony_version}",
    "charmony-api": ">=${api_version}"
  },

  "contact": {
    "homepage": "${homepage_link}",
    "sources": "https://github.com/svenhjol/${mod_id}"
  },

  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "${discord_link}"
      },
      "update_checker": true
    }
  }
}